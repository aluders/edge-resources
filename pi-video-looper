#make sure audio output is set to hdmi
sudo raspi-config > system options > audio

sudo apt update
sudo apt upgrade
sudo apt install mpv
sudo apt install fastfetch
sudo nano /etc/systemd/system/mpv.service

[Unit]
Description=mpv boot video
After=multi-user.target

[Service]
Type=simple
User=edgeadmin
ExecStart=/usr/bin/mpv --hwdec=drm --vo=gpu --ao=alsa --no-terminal --fullscreen --loop=inf /home/edgeadmin/videos/loop-video.mp4
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

sudo systemctl daemon-reexec
sudo systemctl daemon-reload
sudo systemctl enable mpv.service
sudo systemctl start mpv.service
systemctl status mpv.service --no-pager

#weekly reboot saturday
sudo crontab -e
0 0 * * 6 /sbin/shutdown -r now

#alias for easy status checks
sudo nano ~/.bashrc

alias checkmpv='sudo systemctl status mpv --no-pager -l'
alias editmpv='sudo nano /etc/systemd/system/mpv.service'
alias reloadmpv='sudo systemctl daemon-reload && sudo systemctl restart mpv'

source ~/.bashrc

sudo nano /etc/systemd/system/mpv.service

[Unit]
Description=mpv boot video
After=multi-user.target

[Service]
Type=simple
User=edgeadmin
ExecStart=/usr/bin/mpv --hwdec=drm --vo=gpu --ao=alsa --no-terminal --fullscreen --loop=inf /home/edgeadmin/videos/lobby-advent.mp4
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

sudo systemctl daemon-reexec
sudo systemctl daemon-reload
sudo systemctl enable mpv.service
sudo systemctl start mpv.service
systemctl status mpv.service --no-pager

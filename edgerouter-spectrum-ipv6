spectrum ipv6...

configure 
edit interfaces ethernet eth1
set dhcpv6-pd rapid-commit enable 
set dhcpv6-pd no-dns
set dhcpv6-pd pd 0 prefix-length 56 
set dhcpv6-pd pd 0 interface switch0 service slaac 
set dhcpv6-pd pd 0 interface switch0 prefix-id 0 
set dhcpv6-pd pd 0 interface switch0 host-address ::1 
set ipv6 address autoconf  

----- the following may not be needed -----

set firewall ipv6-name WAN_IN-v6 default-action drop
set firewall ipv6-name WAN_IN-v6 rule 10 action accept
set firewall ipv6-name WAN_IN-v6 rule 10 state established enable
set firewall ipv6-name WAN_IN-v6 rule 10 state related enable
set firewall ipv6-name WAN_IN-v6 rule 20 action drop
set firewall ipv6-name WAN_IN-v6 rule 20 state invalid enable
set firewall ipv6-name WAN_IN-v6 rule 40 action accept
set firewall ipv6-name WAN_IN-v6 rule 40 description ipv6-icmp
set firewall ipv6-name WAN_IN-v6 rule 40 protocol ipv6-icmp
set firewall ipv6-name WAN_LOCAL-v6 default-action drop
set firewall ipv6-name WAN_LOCAL-v6 rule 10 action accept
set firewall ipv6-name WAN_LOCAL-v6 rule 10 state established enable
set firewall ipv6-name WAN_LOCAL-v6 rule 10 state related enable
set firewall ipv6-name WAN_LOCAL-v6 rule 20 action drop
set firewall ipv6-name WAN_LOCAL-v6 rule 20 state invalid enable
set firewall ipv6-name WAN_LOCAL-v6 rule 35 action accept
set firewall ipv6-name WAN_LOCAL-v6 rule 35 description 'DHCPv6 reply'
set firewall ipv6-name WAN_LOCAL-v6 rule 35 destination port 546
set firewall ipv6-name WAN_LOCAL-v6 rule 35 protocol udp
set firewall ipv6-name WAN_LOCAL-v6 rule 40 action accept
set firewall ipv6-name WAN_LOCAL-v6 rule 40 description ipv6-icmp
set firewall ipv6-name WAN_LOCAL-v6 rule 40 protocol ipv6-icmp
set firewall ipv6-receive-redirects disable
set firewall ipv6-src-route disable

set interfaces ethernet eth8 dhcpv6-pd no-dns
set interfaces ethernet eth8 dhcpv6-pd pd 0 interface switch0 host-address '::1'
set interfaces ethernet eth8 dhcpv6-pd pd 0 interface switch0 no-dns
set interfaces ethernet eth8 dhcpv6-pd pd 0 interface switch0 prefix-id 0
set interfaces ethernet eth8 dhcpv6-pd pd 0 interface switch0 service slaac
set interfaces ethernet eth8 dhcpv6-pd pd 0 prefix-length 56
set interfaces ethernet eth8 dhcpv6-pd rapid-commit enable
set interfaces ethernet eth8 firewall in ipv6-name WAN_IN-v6
set interfaces ethernet eth8 firewall local ipv6-name WAN_LOCAL-v6
set interfaces ethernet eth8 ipv6 address autoconf
set interfaces ethernet eth8 ipv6 dup-addr-detect-transmits 1
